<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="100dp">

    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textViewTemp"
        android:layout_marginStart="81dp" />

    <TextView
        android:id="@+id/textViewTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignBaseline="@+id/gifTextViewWeather"
        android:layout_alignBottom="@+id/gifTextViewWeather"
        android:layout_alignStart="@+id/textViewWeather" />

    <TextView
        android:id="@+id/textViewWeather"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignBottom="@+id/gifTextViewWeather"
        android:layout_toEndOf="@+id/gifTextViewWeather"
        android:layout_marginStart="22dp" />

    <pl.droidsonroids.gif.GifTextView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/gifTextViewWeather"
        android:layout_alignBaseline="@+id/textViewDate"
        android:layout_alignBottom="@+id/textViewDate"
        android:layout_alignParentStart="true" />
</RelativeLayout>